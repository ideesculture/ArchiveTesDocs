{% extends '::base.html.twig' %}

{% block title %}
    - STATUS PAGE
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block overlay %}
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default mt10" id="panelStockStatus">
                <div class="panel-heading">Rapprochement des stocks en cours</div>
                <div class="panel-body">
                    <span>Statut: </span><strong><span id="rec_status">...</span></strong><br>

                    <div class="row" id="step1">
                        <h3 class="text-primary">Etape 1</h3>
                        <p id="step1progress"><span>Début d'anlayse du fichier: </span><span id="rec_datebeginstep1">...</span> -
                        <span>Fichier: </span><span id="rec_realfilename">...</span> -
                        <span>Fin estimée: </span><span id="rec_estimatedendstep1">...</span><br></p>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped active" id="rec_percentstep1" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%;">
                                ...
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row" id="step2">
                        <h3 class="text-primary">Etape 2</h3>
                        <p id="step2progress"><span>Début d'anlayse de la base </span><span id="rec_datebeginstep2">N/A</span> -
                        <span>Fin estimée: </span><span id="rec_estimatedendstep2">N/A</span><br></p>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped active" id="rec_percentstep2" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%;">
                                N/A
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var JSON_URLS = {
            bs_idp_archive_reconciliation_getstatus: "{{ path('bs_idp_archive_reconciliation_getstatus')}}",
            bs_core_userspace_userfile_viewmainscreen: '{{ path("bs_core_userspace_userfile_viewmainscreen") }}',
            bs_idp_export_all_offline: '{{ path("bs_idp_export_all_offline") }}',
        };
        var IDP_CONST = {
            bs_idp_current_page: {{ currentMenu }}
        };
    </script>

    {% javascripts
        '@bsIDPArchiveBundle/Resources/public/js/IDPReconciliationStatus.1.1.6.10.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}