  		<div class="panel-body" id="textPoll">

  		</div>
	</div>
  </div>
</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
    var JSON_URLS = { bs_idp_archive_ajaximporttreatmentsurvey: "{{path('bs_idp_archive_ajaximporttreatmentsurvey')}}",
        bs_core_userspace_userfile_viewmainscreen: '{{ path("bs_core_userspace_userfile_viewmainscreen") }}',
        bs_idp_export_all_offline: '{{ path("bs_idp_export_all_offline") }}',
    };
	var IDP_CONST = { importid: "{{ import.id }}"
	};
	</script>

	{% javascripts '@bsIDPArchiveBundle/Resources/public/js/IDPArchiveSee.0.6.3.js' %}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}